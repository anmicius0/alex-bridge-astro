---
// src/components/SectionHeader.astro
interface Props {
  title: string;
  description: string;
  class?: string;
}
const { title, description, class: extraClass = '' } = Astro.props;
---

<div class={`mb-10 text-center max-w-3xl mx-auto ${extraClass}`}>
  <h2 class="mb-3 text-3xl md:text-4xl font-extrabold">{title}</h2>
  <p class="text-lg text-gray-600">{description}</p>
</div>
