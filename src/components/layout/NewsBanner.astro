---
/**
 * NewsBanner
 * Brutalist news banner displayed under the Header and above the Hero on the homepage.
 * Shows the latest news title and links to the post with bold, eye-catching styling.
 */
import { getCollection } from 'astro:content';
import DateDisplay from '../ui/DateDisplay.astro';

interface NewsItem {
  title: string;
  slug: string;
  date?: string;
}

const posts = await getCollection('news');
// Sort by date desc and pick the newest
const sorted = posts.sort(
  (a, b) =>
    new Date(String(b.data.date ?? '')).getTime() -
    new Date(String(a.data.date ?? '')).getTime()
);
const latest = sorted[0];
const hasLatest = !!latest;
let title = '';
let href = '';
let date = null;
if (hasLatest) {
  title = latest.data.title;
  date = latest.data.date;
  // Attempt to compute slug from filePath or id
  const sourceId = latest.filePath || latest.id || '';
  const slug = sourceId
    .replace(/\.mdx?$|\.md$/i, '')
    .split('/')
    .pop();
  href = `/news/${slug}`;
}
const { class: extraClass = '' } = Astro.props;
---

{
  hasLatest && (
    <div class={`max-w-4xl mx-auto mb-4 px-4 ${extraClass}`}>
      <a href={href} class="block group banner-card">
        {/* Content in single row */}
        <div class="flex items-center gap-2">
          <div class="news-badge">Neu</div>
          {date && (
            <p class="flex-shrink-0 text-xs font-semibold text-muted-weak">
              <DateDisplay date={date} />
            </p>
          )}
          <p class="text-sm font-bold text-black truncate transition-colors group-hover:text-brutalBlue">
            {title}
          </p>
        </div>
      </a>
    </div>
  )
}

<style>
  .banner-card {
    display: block;
    padding: 0.75rem 1rem;
    border: 3px solid var(--border);
    border-radius: 0.5rem;
    background: white;
    box-shadow: 3px 3px 0 var(--border);
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
  }

  .banner-card:hover {
    box-shadow: 6px 6px 0 var(--border);
    transform: translate(-1px, -1px);
  }

  .news-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem 0.5rem;
    background-color: var(--blue);
    border: 2px solid var(--border);
    border-radius: 0.375rem;
    font-weight: 700;
    font-size: 0.75rem;
    flex-shrink: 0;
  }
</style>
